{
    "name": "pg-database",
    "description": "Handy wrapper for pg (node-postgres) database connection instances",
    "license": "MIT",
    "repository": "https://github.com/damianobarbati/pg-database.git",
    "author": "Damiano Barbati <damiano.barbati@gmail.com> (https://github.com/damianobarbati)",
    "version": "1.0.0",
    "type": "module",
    "main": "src/index.js",
    "engines": {
        "node": ">=12.0.0"
    },
    "exports": {
        ".": "src/index.js",
        "./pg-named": "./src/named.js",
        "./pg-logged": "./src/logged.js"
    },
    "scripts": {
        "test:db": "docker run --rm --name pg-database-test -p 5432:5432 --detach --env POSTGRES_USER=root --env POSTGRES_PASSWORD=root --env POSTGRES_DB=test postgres:12",
        "test": "DB_URI=postgresql://root:root@127.0.0.1:5432/test DB_LOG=1 npx --no-install -n '-r esm' jasmine --random=false src/*.spec.js"
    },
    "dependencies": {
        "esm": "^3.2.25",
        "pg": "^7.12.1",
        "pg-database": "^1.0.0",
        "pg-logged": "^1.0.1",
        "pg-named": "^1.0.2"
    },
    "devDependencies": {
        "babel-eslint": "^10.0.3",
        "eslint": "^6.4.0",
        "eslint-plugin-jasmine": "^2.10.1",
        "jasmine": "^3.5.0"
    }
}
