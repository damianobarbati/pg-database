{
    "name": "pg-database",
    "description": "Handy wrapper for pg (node-postgres) database connection instances",
    "license": "MIT",
    "repository": "https://github.com/damianobarbati/pg-database.git",
    "author": "Damiano Barbati <damiano.barbati@gmail.com> (https://github.com/damianobarbati)",
    "version": "1.0.2",
    "type": "module",
    "main": "src/index.js",
    "engines": {
        "node": ">=12.0.0"
    },
    "exports": {
        ".": "src/index.js",
        "./pg-named": "./src/named.js",
        "./pg-logged": "./src/logged.js"
    },
    "scripts": {
        "test:db-start": "docker run --rm --name pg-database-test -p 6000:5432 --detach --env POSTGRES_USER=root --env POSTGRES_PASSWORD=root --env POSTGRES_DB=test postgres:12-alpine",
        "test:db-stop": "docker rm -f pg-database-test",
        "test": "DB_URI=postgresql://root:root@127.0.0.1:6000/test DB_LOG=1 npx --no-install -n '-r esm' jasmine --random=false src/*.spec.js"
    },
    "dependencies": {
        "common-tags": "^1.8.0",
        "esm": "^3.2.25",
        "pg": "^7.14.0",
        "pg-database": "^1.0.1",
        "pg-logged": "^1.0.1",
        "pg-named": "^1.0.2"
    },
    "devDependencies": {
        "eslint": "^6.7.2",
        "eslint-plugin-jasmine": "^4.1.0",
        "jasmine": "^3.5.0"
    }
}
